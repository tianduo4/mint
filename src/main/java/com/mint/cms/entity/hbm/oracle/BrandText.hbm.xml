<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.mint.cms.entity">
    <class name="BrandText" table="jc_shop_brand_text">
        <meta attribute="sync-DAO">false</meta>
        <cache usage="read-write"/>
        <id name="id" type="java.lang.Long" column="brand_id">
            <generator class="foreign">
                <param name="property">brand</param>
            </generator>
        </id>
        <property name="text" column="text" type="java.lang.String" not-null="false"/>
        <one-to-one name="brand" class="Brand" constrained="true"/>
    </class>
</hibernate-mapping>