<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.jspgou.cms.entity">
    <class name="ProductText" table="jc_shop_product_text" lazy="true">
        <meta attribute="sync-DAO">false</meta>
        <cache usage="read-write"/>
        <id name="id" type="java.lang.Long" column="product_id">
            <generator class="foreign">
                <param name="property">product</param>
            </generator>
        </id>
        <property name="text" column="text" type="java.lang.String" not-null="false"/>
        <property name="text1" column="text1" type="java.lang.String" not-null="false"/>
        <property name="text2" column="text2" type="java.lang.String" not-null="false"/>
        <one-to-one name="product" class="Product" constrained="true" cascade="all"/>
    </class>
</hibernate-mapping>